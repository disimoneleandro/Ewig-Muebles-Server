<div class="div-header">
      <img class="img-logo" src="/images/logoEwig.png" alt="logo"/>
</div>
<div class="body-container">
    <div class="form-container">
        <h3 class="form-title">ADMIN</h3>
        <form action="/admin/login" method="post" class="form-login">
                <label for="usuario">Usuario</label>
                <input type="text" name="usuario">
                <label for="password">Contraseña</label>
                <input type="password" name="password">
            <div class="div-btn">
                <button class="btn btn-dark" type="submit">Ingresar</button>
            </div>
        </form>
    </div>
</div>
        {{#if error}}
                <p class="p-error">Usuario y/o contraseña incorrecta</p>
        {{/if}}
